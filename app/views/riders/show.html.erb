<%- model_class = Rider -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:routeID) %>:</strong></dt>
  <dd><%= @rider.routeID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stopID) %>:</strong></dt>
  <dd><%= @rider.stopID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:studentCount) %>:</strong></dt>
  <dd><%= @rider.studentCount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cashCount) %>:</strong></dt>
  <dd><%= @rider.cashCount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:halfCount) %>:</strong></dt>
  <dd><%= @rider.halfCount %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              riders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rider_path(@rider), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rider_path(@rider),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
