<%- model_class = Frequency -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:route_id) %></th>
      <th><%= model_class.human_attribute_name(:mon) %></th>
      <th><%= model_class.human_attribute_name(:tues) %></th>
      <th><%= model_class.human_attribute_name(:wed) %></th>
      <th><%= model_class.human_attribute_name(:thur) %></th>
      <th><%= model_class.human_attribute_name(:fri) %></th>
      <th><%= model_class.human_attribute_name(:sat) %></th>
      <th><%= model_class.human_attribute_name(:sun) %></th>
      <th><%= model_class.human_attribute_name(:time) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @frequencies.each do |frequency| %>
      <tr>
        <td><%= link_to frequency.id, frequency_path(frequency) %></td>
        <td><%= Route.find(frequency.route_id).name %></td>
        <td><%= frequency.mon %></td>
        <td><%= frequency.tues %></td>
        <td><%= frequency.wed %></td>
        <td><%= frequency.thur %></td>
        <td><%= frequency.fri %></td>
        <td><%= frequency.sat %></td>
        <td><%= frequency.sun %></td>
        <td><%= frequency.time.strftime("%I:%M %p") %></td>
        <td><%= frequency.end_time %></td>
	<td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_frequency_path(frequency), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      frequency_path(frequency),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_frequency_path,
            :class => 'btn btn-primary' %>
