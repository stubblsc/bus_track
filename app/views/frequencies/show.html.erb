<%- model_class = Frequency -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:route_id) %>:</strong></dt>
  <dd><%= @frequency.route_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mon) %>:</strong></dt>
  <dd><%= @frequency.mon %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tues) %>:</strong></dt>
  <dd><%= @frequency.tues %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wed) %>:</strong></dt>
  <dd><%= @frequency.wed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:thur) %>:</strong></dt>
  <dd><%= @frequency.thur %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fri) %>:</strong></dt>
  <dd><%= @frequency.fri %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sat) %>:</strong></dt>
  <dd><%= @frequency.sat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sun) %>:</strong></dt>
  <dd><%= @frequency.sun %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @frequency.time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @frequency.end_time %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              frequencies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_frequency_path(@frequency), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              frequency_path(@frequency),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
