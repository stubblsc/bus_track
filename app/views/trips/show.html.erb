<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:route_id) %>:</strong></dt>
  <dd><%= @trip.route_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order) %>:</strong></dt>
  <dd><%= @trip.order %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_stop_id) %>:</strong></dt>
  <dd><%= @trip.first_stop_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:second_stop_id) %>:</strong></dt>
  <dd><%= @trip.second_stop_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:polyline) %>:</strong></dt>
  <dd><%= @trip.polyline %></dd>
  <dt><strong><%= model_class.human_attribute_name(:distance) %>:</strong></dt>
  <dd><%= @trip.distance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @trip.time %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trips_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_path(@trip), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_path(@trip),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
