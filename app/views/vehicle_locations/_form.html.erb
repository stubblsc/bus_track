<%= form_for @vehicle_location, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :vehicle_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :vehicle_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :route_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :route_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latitude, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longitude, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicle_locations_path, :class => 'btn' %>
  </div>
<% end %>
