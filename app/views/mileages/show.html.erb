<%- model_class = Mileage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:busId) %>:</strong></dt>
  <dd><%= @mileage.busId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:driverId) %>:</strong></dt>
  <dd><%= @mileage.driverId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reason) %>:</strong></dt>
  <dd><%= @mileage.reason %></dd>
  <dt><strong><%= model_class.human_attribute_name(:startMileage) %>:</strong></dt>
  <dd><%= @mileage.startMileage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endMileage) %>:</strong></dt>
  <dd><%= @mileage.endMileage %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mileages_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mileage_path(@mileage), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mileage_path(@mileage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
