<%- model_class = Route -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @route.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longname) %>:</strong></dt>
  <dd><%= @route.longname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @route.color %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shape) %>:</strong></dt>
  <dd><%= @route.shape %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enabled) %>:</strong></dt>
  <dd><%= @route.enabled %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              routes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_route_path(@route), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              route_path(@route),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
